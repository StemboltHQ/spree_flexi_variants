<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :page_title do %>
  <%= t("product_customization_types") %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t("new_product_customization_type"), new_admin_product_customization_type_url, :icon => 'icon-plus', :id => 'new_product_customization_type_link' %>
  </li>
<% end %>

<div id="new_product_customization_type"></div>

<table class="index sortable" id='listing_product_customization_types'>
  <thead>
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("presentation") %></th>
      <th><%= t("description") %></th>
      <th class='actions'></th>
    </tr>
  </thead>
  <tbody>
    <% @product_customization_types.each do |product_customization_type| %>
      <tr id="<%= dom_id product_customization_type %>">
        <td><span class="handle"></span> <%= product_customization_type.name %></td>
        <td class='presentation'><%= product_customization_type.presentation %></td>
        <td class='description'><%= product_customization_type.description %></td>
        <td class="actions">
          <%= link_to_edit(product_customization_type, :no_text => true) %>
          <%= link_to_delete(product_customization_type, :no_text => true) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
